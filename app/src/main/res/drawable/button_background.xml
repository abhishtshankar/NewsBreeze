<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#CCFFCC" /> <!-- Light green color when pressed -->
            <corners android:radius="8dp" /> <!-- Rounded corners with a radius of 8dp -->
            <padding
                android:top="8dp"
                android:bottom="8dp"
                android:left="16dp"
                android:right="16dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#88FF88" /> <!-- Light green color by default -->
            <corners android:radius="8dp" /> <!-- Rounded corners with a radius of 8dp -->
            <padding
                android:top="8dp"
                android:bottom="8dp"
                android:left="16dp"
                android:right="16dp" />
        </shape>
    </item>
</selector>
